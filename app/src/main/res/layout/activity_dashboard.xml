<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/main"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".Dashboard">

    <ScrollView
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_marginBottom="40dp">

        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:orientation="vertical">

                <FrameLayout
                    android:layout_width="match_parent"
                    android:layout_height="300dp"
                    android:background="@color/primary">

                    <TextView
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:text="Selamat Datang Di Kedai BORJU"
                        android:textColor="@color/white"
                        android:fontFamily="@font/poppins_semibold"
                        android:textSize="34dp"
                        android:layout_marginTop="130dp"
                        android:layout_marginStart="15dp"
                        android:layout_marginEnd="15dp"/>
                </FrameLayout>

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:orientation="vertical"
                    android:background="@drawable/bg_white"
                    android:layout_marginTop="250dp"
                    android:layout_marginStart="15dp"
                    android:layout_marginEnd="15dp"
                    android:elevation="5dp">

                    <TextView
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:layout_marginTop="15dp"
                        android:layout_marginStart="15dp"
                        android:textColor="@color/black"
                        android:fontFamily="@font/poppins_bold"
                        android:textSize="20sp"
                        android:text="PROMO Tahun Baru!" />

                    <TextView
                        android:layout_width="90dp"
                        android:layout_height="50dp"
                        android:layout_marginStart="15dp"
                        android:text="30%"
                        android:fontFamily="@font/poppins_bold"
                        android:textColor="@color/primary"
                        android:textSize="40sp"/>

                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_marginStart="15dp"
                        android:fontFamily="@font/poppins"
                        android:text="Dapatkan Potongan MIN. Belanja Rp.100.000"
                        android:textColor="@color/hint"
                        android:textStyle="bold"/>

                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_marginStart="15dp"
                        android:fontFamily="@font/poppins_bold"
                        android:text="1-15 Januari 2025"
                        android:textStyle="bold"
                        android:layout_marginBottom="15dp"/>

                </LinearLayout>

            <TextView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:textColor="@color/black"
                android:fontFamily="@font/poppins_bold"
                android:textSize="26sp"
                android:layout_marginStart="20dp"
                android:layout_marginEnd="20dp"
                android:layout_marginTop="420dp"
                android:text="Sedang Populer!" />


            <HorizontalScrollView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="460dp"
                android:scrollbars="none">

                <LinearLayout
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:orientation="horizontal"
                    android:padding="10dp">

                    <!-- Item Pertama -->
                    <LinearLayout
                        android:layout_width="150dp"
                        android:layout_height="200dp"
                        android:orientation="vertical"
                        android:layout_marginEnd="10dp"
                        android:background="@drawable/bg_prmy"
                        android:elevation="5dp">

                        <ImageView
                            android:layout_width="match_parent"
                            android:layout_height="150dp"
                            android:src="@drawable/mie"
                            android:scaleType="centerCrop" />

                        <TextView
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:padding="10dp"
                            android:fontFamily="@font/poppins_semibold"
                            android:textColor="@color/white"
                            android:text="Mie Ayam"
                            android:textSize="16sp" />
                    </LinearLayout>

                    <!-- Item Kedua -->
                    <LinearLayout
                        android:layout_width="150dp"
                        android:layout_height="200dp"
                        android:orientation="vertical"
                        android:layout_marginEnd="10dp"
                        android:background="@drawable/bg_prmy"
                        android:elevation="5dp">

                        <ImageView
                            android:layout_width="match_parent"
                            android:layout_height="150dp"
                            android:src="@drawable/mie"
                            android:scaleType="centerCrop" />

                        <TextView
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:padding="10dp"
                            android:fontFamily="@font/poppins_semibold"
                            android:textColor="@color/white"
                            android:text="Mie Ayam"
                            android:textSize="16sp" />
                    </LinearLayout>

                    <LinearLayout
                        android:layout_width="150dp"
                        android:layout_height="200dp"
                        android:orientation="vertical"
                        android:layout_marginEnd="10dp"
                        android:background="@drawable/bg_white"
                        android:elevation="5dp">

                        <ImageView
                            android:layout_width="match_parent"
                            android:layout_height="150dp"
                            android:src="@drawable/mie"
                            android:scaleType="centerCrop" />

                        <TextView
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:padding="10dp"
                            android:fontFamily="@font/poppins_semibold"
                            android:textColor="@color/black"
                            android:text="Item 2"
                            android:textSize="16sp" />
                    </LinearLayout>

                    <LinearLayout
                        android:layout_width="150dp"
                        android:layout_height="200dp"
                        android:orientation="vertical"
                        android:background="@drawable/bg_white"
                        android:elevation="5dp">

                        <ImageView
                            android:layout_width="match_parent"
                            android:layout_height="150dp"
                            android:src="@drawable/mie"
                            android:scaleType="centerCrop" />

                        <TextView
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:padding="10dp"
                            android:fontFamily="@font/poppins_semibold"
                            android:textColor="@color/black"
                            android:text="Item 2"
                            android:textSize="16sp" />
                    </LinearLayout>

                    <!-- Tambahkan Item Sesuai Kebutuhan -->

                </LinearLayout>
            </HorizontalScrollView>

            <HorizontalScrollView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="750dp"
                android:layout_marginStart="15dp"
                android:layout_marginEnd="15dp"
                android:scrollbars="none">

                <LinearLayout
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:orientation="horizontal">

                    <!-- Item Pertama -->
                    <LinearLayout
                        android:layout_width="200dp"
                        android:layout_height="250dp"
                        android:orientation="vertical"
                        android:layout_marginEnd="10dp"
                        android:background="@drawable/bg_white"
                        android:elevation="5dp">

                        <ImageView
                            android:layout_width="match_parent"
                            android:layout_height="150dp"
                            android:src="@drawable/mie"
                            android:scaleType="centerCrop" />

                        <TextView
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:padding="10dp"
                            android:fontFamily="@font/poppins_semibold"
                            android:textColor="@color/black"
                            android:text="Item 1"
                            android:textSize="16sp" />
                    </LinearLayout>

                    <!-- Item Kedua -->
                    <LinearLayout
                        android:layout_width="200dp"
                        android:layout_height="250dp"
                        android:orientation="vertical"
                        android:layout_marginEnd="10dp"
                        android:background="@drawable/bg_white"
                        android:elevation="5dp">

                        <ImageView
                            android:layout_width="match_parent"
                            android:layout_height="150dp"
                            android:src="@drawable/mie"
                            android:scaleType="centerCrop" />

                        <TextView
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:padding="10dp"
                            android:fontFamily="@font/poppins_semibold"
                            android:textColor="@color/black"
                            android:text="Item 2"
                            android:textSize="16sp" />
                    </LinearLayout>

                    <!-- Tambahkan Item Sesuai Kebutuhan -->

                </LinearLayout>
            </HorizontalScrollView>


        </RelativeLayout>
    </ScrollView>

    <EditText
        android:layout_width="match_parent"
        android:layout_height="50dp"
        android:layout_marginTop="50dp"
        android:layout_marginStart="15dp"
        android:layout_marginEnd="75dp"
        android:drawableStart="@drawable/baseline_search_24"
        android:layout_weight="1"
        android:drawablePadding="5dp"
        android:paddingStart="15dp"
        android:hint="Cari makanan atau minuman"
        android:background="@drawable/bg_white"
        android:fontFamily="@font/poppins_semibold"
        android:textColor="@color/hint"
        android:elevation="5dp"
        android:textSize="16sp" />

    <ImageView
        android:layout_width="50dp"
        android:layout_height="50dp"
        android:layout_alignParentTop="true"
        android:layout_marginTop="50dp"
        android:layout_marginEnd="15dp"
        android:layout_alignParentEnd="true"
        android:src="@drawable/ic_profile"
        android:background="@drawable/ic_profile"
        android:elevation="6dp" />

</RelativeLayout>
